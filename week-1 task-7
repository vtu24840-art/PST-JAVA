int EvenOddDigitsSum(int input1, char* input2)
{
    int sum = 0;
    int digit;

    while (input1 > 0)
    {
        digit = input1 % 10;

        if (strcmp(input2, "even") == 0)
        {
            if (digit % 2 == 0)
                sum += digit;
        }
        else if (strcmp(input2, "odd") == 0)
        {
            if (digit % 2 != 0)
                sum += digit;
        }

        input1 = input1 / 10;
    }

    return sum;
}
